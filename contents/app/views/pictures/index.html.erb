<h1>Listing <%= pluralize(@pictures.count, 'picture') %></h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Album</th>
    <th>From</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= link_to image_tag(picture.photo.url(:thumb)), picture %></td>
    <td><%= picture.title %></td>
    <td>
      <% unless picture.album.nil? %>
        <%= link_to picture.album.title, picture.album %>
      <% end %>
    </td>
    <td><%= picture.user.profile.nick %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Picture', new_picture_path %>
