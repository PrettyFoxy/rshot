<div class="mediumview-picture">
  <%= link_to image_tag(picture.photo.url(:small), :class => 'medium-image'), profile_picture_path(picture.profile, picture) %>
  <% unless picture.title.empty? %>
    <h3><%= link_to picture.title, profile_picture_path(picture.profile, picture) %></h3>
  <% end %>
  <span class="label notice">
    <%= pluralize(picture.comments.count, 'comment') %>
  </span>
</div>
