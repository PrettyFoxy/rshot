<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @album.title %>
</p>

<p>
  <b><%= pluralize(@album.pictures.count, 'picture') %></b>
  <% for picture in @album.pictures %>
    <%= link_to image_tag(picture.photo.url(:thumb)), album_picture_path(@album, picture) %>
  <% end %>
</p>


<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
