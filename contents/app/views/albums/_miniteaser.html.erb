<div class="shimmer-album-miniteaser">
    <h3><%= album.title %> (<%= pluralize(album.pictures.count, 'picture') %>)</h3>
    <ul>
        <li>
            <%= link_to image_tag(album.pictures.first.photo.url(:thumb), :class => 'mini-image'), profile_album_path(album.profile, album) %>
        </li>
    </ul>
    <div class="clearfix"></div>
</div>
