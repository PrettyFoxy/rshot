<%= form_for([@profile, @album], :html => { :class => "form-stacked" }) do |f| %>
  <% if @album.errors.any? %>
    <div class="alert-message block-message error fade in" data-alert="alert">
      <a class="close" href="#">&times;</a>
      <h3><%= pluralize(@album.errors.count, "error") %> prohibited this album from being saved:</h3>

      <ul>
      <% @album.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="actions">
    <%= f.submit(:class => "btn primary") %>

    <% if @album.persisted? %>
      <%= link_to 'Back', profile_album_path(@profile, @album), :class => "btn" %>
    <% else %>
      <%= link_to 'Back', profile_albums_path(@profile), :class => "btn" %>
    <% end %>
  </div>
<% end %>
