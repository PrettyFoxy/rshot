<%= form_for([@profile, @album], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @album.errors.any? %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <strong><%= pluralize(@album.errors.count, "error") %> prohibited this album from being saved:</strong>

      <ul>
      <% @album.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit(:class => "btn btn-primary") %>

    <% if @album.persisted? %>
      <%= link_to 'Back', profile_album_path(@profile, @album), :class => "btn" %>
    <% else %>
      <%= link_to 'Back', profile_albums_path(@profile), :class => "btn" %>
    <% end %>
  </div>
<% end %>
