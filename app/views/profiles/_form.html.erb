<%= form_for(@profile, :html => { :multipart => true, :class => "form-stacked" }) do |f| %>
  <% if @profile.errors.any? %>
    <div class="alert-message block-message error fade in" data-alert="alert">
      <a class="close" href="#">&times;</a>
      <h3><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h3>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <% unless @profile.avatar.nil? %>
      <%= image_tag @profile.avatar.url(:tiny) %>
    <% end %>

    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="clearfix">
    <%= f.label :nick %><br />
    <%= f.text_field :nick %>
  </div>
  <div class="clearfix">
    <%= f.label :forename %><br />
    <%= f.text_field :forename %>
  </div>
  <div class="clearfix">
    <%= f.label :surname %><br />
    <%= f.text_field :surname %>
  </div>
  <div class="clearfix">
    <%= f.label :bio %><br />
    <%= f.text_field :bio %>
  </div>
  <div class="clearfix">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="clearfix">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
  <div class="actions">
    <%= f.submit(:class => "btn primary") %>
    <%= link_to 'Back', @profile, :class => "btn" %>
  </div>
<% end %>
