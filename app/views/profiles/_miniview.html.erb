<div class="well rshot-miniprofile">
<ul class="nav nav-list">
    <li class="nav-header">
      <b>From:</b>
      <%= link_to image_tag(profile.avatar.url(:micro), :class => 'profile-image img-rounded') + profile.nick, profile, {:title => "#{profile.forename} #{profile.surname}", :rel => 'tooltip'} %>
    </li>

    <li class="active">
        <a href="<%= profile_pictures_path(profile) %>">
            <i class="icon-picture"></i>
            Photostream <span class="badge badge-inverse"><%= profile.pictures.count %></span>
        </a>
    </li>
    <li>
        <a href="<%= profile_albums_path(profile) %>">
            <i class="icon-folder-open"></i>
            Albums <span class="badge badge-inverse"><%= profile.albums.count %></span>
        </a>
    </li>
    <li>
        <a href="<%= profile_path(profile) %>">
            <i class="icon-user"></i>
            User profile
        </a>
    </li>
</ul>
</div>